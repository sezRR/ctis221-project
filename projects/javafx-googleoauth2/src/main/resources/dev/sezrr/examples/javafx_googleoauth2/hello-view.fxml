<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.sezrr.examples.javafx_googleoauth2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <Button fx:id="loginButton" text="OAuth2 ile Giriş" onAction="#onLoginButtonClick"/>
    <Label text="Özel URI Şeması" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <Label text="Bu uygulamaya derin bağlantı için kullanılabilir:" style="-fx-font-style: italic;"/>
    <Label fx:id="uriSchemeLabel" text="oauthapp://"/>
</VBox>
