<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root alignment="CENTER_LEFT" spacing="24.0"
     styleClass="chat-item"
     type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/21.0.7"
     xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="chatTitle" maxWidth="1.7976931348623157E308" style="-fx-text-fill: whitesmoke; -fx-font-size: 14px;" text="Default Chat Title" HBox.hgrow="ALWAYS" />
      <FontIcon fx:id="contextMenuIcon" iconColor="WHITE" iconLiteral="fas-ellipsis-h" iconSize="12" />
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
    </padding>
</fx:root>
